.scriptForm
  .scriptForm_info
    .scriptForm_thumbnail
      img(src='/' + panel.path)
    .scriptForm_autoScript
      div
        i.fa.fa-magic
      =panel.metadata.auto_script
  .scriptForm_script
    if panel.metadata.script
      i.fa.fa-cogs
    else
      i.fa.fa-magic
    textarea(
      onChange=panelAction.updateScript,
      value=panel.metadata.script || panel.metadata.auto_script || '',
      autoFocus=true)
  ConfirmButton(icon='commenting', onClick=submit)
.scriptHelp
  ul
    li Control+Enter: submit
    li Control+s: next
    li Control+l: prev
